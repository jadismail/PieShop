@model CategoryMenu

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Shop
    </button>
    <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item" asp-controller="Pie" asp-action="List">
            All Categories
            </a>
        </li>
        @foreach (var category in Model.Categories)
        {
            <li>
                <a class="dropdown-item"
                   asp-controller="Pie"
                   asp-action="List"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a></li>
        }
    </ul>
</div>
