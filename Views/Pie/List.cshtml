@model PieShop.ViewModels.PieListViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Pies List</title>
</head>
<body>
<h1>Pies List</h1>
<hr /> 
<h2>Category: @Model.CurrentCategory</h2>
@foreach (var pie in Model.Pies)
{
    <div>
        <h2>@pie.Name</h2>
        <p>@pie.ShortDescription</p>
        <p>@pie.Price.ToString("c")</p>
    </div>
}
</body>
</html>